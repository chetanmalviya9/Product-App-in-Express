<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        const removeAlert=()=>{
            const alert =document.getElementById("message")
            alert.remove();
        }
    </script>
    <%-include('_bootstrap.ejs')%>
</head>

<body>
    <div id="viewport">
        <!-- Sidebar -->
        <%-include('header.ejs')%>
            <!-- Content -->
            <div id="content">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#"><i class="zmdi zmdi-notifications text-danger"></i>
                                </a>
                            </li>
                            <li><a href="#">Test User</a></li>
                        </ul>
                    </div>
                </nav>
                <div class="container-fluid">
                    <%if(message){%>
                        <div id="message" class="alert alert-success alert-dismissible">
                            <button type="button" class="close" onclick="removeAlert()" data-dismiss="alert">&times;</button>
                            <strong>Success!</strong> <%=message%>
                        </div>
                    <%}%>  
                    <form action="/category/add" method="post">

                        <div class="form-group">
                            <label>Category Name</label>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-lg-6">
                                    <input class="form-control " name="categoryName" type="text">
                                </div>
                                <div class="col-md-6 col-sm-6 col-lg-6">
                                    <button class="btn btn-success " type="submit"> Save </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
    </div>
</body>

</html>